<Window x:Class="PLWPF.warnningBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="warnningBox" Height="155" Width="450" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Text="!!שים לב פעולה זו היא בלתי הפיכה" VerticalAlignment="Top" FontSize="25" Foreground="Red" />
        <TextBlock HorizontalAlignment="Center"  Text="כדי לאמת את זהותך אנא הכנס את שמך הפרטי" VerticalAlignment="Top"/>
        <TextBox x:Name="privateName" HorizontalAlignment="Center" Text="כאן הזן את שמך הפרטי" VerticalAlignment="Center" Width="217" Foreground="Gray"  TextAlignment="Right"/>
        <Label x:Name="warnning" Content="warnning label" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="217" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="12" Visibility="Hidden" Foreground="Red" BorderBrush="White"/>
        <Button x:Name="enter" Content="אישור" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Click="enter_Click"/>
    </StackPanel>
</Window>
