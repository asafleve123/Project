<Window x:Class="PLWPF.Trainees"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="Trainees" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Pictures/trainee.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Button Content="הוסף תלמיד" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="auto" Height="auto" FontSize="50"/>
        <Button Content="עדכון תלמיד" HorizontalAlignment="Center"  Grid.Row="2" VerticalAlignment="Center" Width="auto" Height="auto" FontSize="50"/>
        <Button Content="מחיקה של תלמיד" HorizontalAlignment="Center"  Grid.Row="3" VerticalAlignment="Center" Width="auto" Height="auto" FontSize="50"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="תלמיד" VerticalAlignment="Center" FontSize="50"/>
    </Grid>
</Window>
