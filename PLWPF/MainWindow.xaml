<Window x:Class="PLWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="MainWindow">
    <Window.Resources>
        <Style x:Key="MyTabItem" TargetType="TabItem">
            <Setter Property="FontSize" Value="30" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Height" Value="auto"/>
        </Style>
    </Window.Resources>
    <Grid Margin="0" Background="#FF29ABAB">

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        <Grid  Grid.Row="0">
            <TextBlock Background="#FF29ABAB" HorizontalAlignment="Center" VerticalAlignment="Center" Text="משרד הרישוי מערכת מבחני נהיגה" TextAlignment="Center" FontWeight="Bold" FontFamily="David" Margin="10" FontSize="50"/>
        </Grid>
        <Grid  Grid.Row="1" >
            <TabControl HorizontalAlignment="Center"  VerticalAlignment="Center" TabStripPlacement="Top"  BorderBrush="Black" Margin="53,10,48.2,0.4" Height="396" Width="662">

                <TabItem Header="בוחן" Style="{StaticResource MyTabItem}" BorderBrush="Black" Margin="0,0,-371.8,0" VerticalAlignment="Top" >
                    <Grid x:Name="Grid0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="20*" />
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="20*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Background="#FFDAD8D8" TextAlignment="Right" Text=":תעודת זהות" HorizontalAlignment="Right" Width="{Binding ActualWidth,ElementName=Grid0}"/>
                        <TextBox Grid.Row="1" />
                        <TextBlock  Grid.Row="1" Background="#FFDAD8D8" Text=":סיסמה" TextAlignment="Right" HorizontalAlignment="Right" Height="auto" Width="656" Margin="0,69.4" Grid.RowSpan="3" />
                        <PasswordBox Grid.Row="3" Height="50"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="4">
                            <Button Content="בוחן חדש? - לחץ כאן" Height="50" Click="Button_Click"/>
                            <Button Content="התחבר" Height="50" Width="171"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <TabItem Header="נבחן"  Style="{StaticResource MyTabItem}" HorizontalAlignment="Stretch" Margin="372.8,0,-373.6,0.2" RenderTransformOrigin="0.036,0.833" >
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="20*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Background="#FFDAD8D8" TextAlignment="Right" Text=":תעודת זהות" HorizontalAlignment="Right" Height="50" Width="500" />
                        <TextBox Grid.Row="1" Height="50"/>
                        <TextBlock Grid.Row="2" Background="#FFDAD8D8" Text=":סיסמה" TextAlignment="Right" HorizontalAlignment="Right" Height="50" Width="500" />
                        <PasswordBox Grid.Row="3" Height="50"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80*"/>
                                    <ColumnDefinition Width="20*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="נבחן חדש? - לחץ כאן" FontSize="30"  Height="Auto" Width="Auto"/>
                                <Button Grid.Column="1" Content="התחבר" Height="50" Width="171"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

    </Grid>
</Window>
