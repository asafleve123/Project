<Window x:Class="PLWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="MainWindow">
    <Window.Resources>
        <Style x:Key="MyTabItem" TargetType="TabItem">
            <Setter Property="FontSize" Value="30" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Height" Value="auto"/>
        </Style>
    </Window.Resources>
        <Grid Margin="0" Background="#FF29ABAB">

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        <Grid  Grid.Row="0">
            <TextBlock Background="#FF29ABAB" HorizontalAlignment="Center" VerticalAlignment="Center" Text="משרד הרישוי מערכת מבחני נהיגה" TextAlignment="Center" FontWeight="Bold" FontFamily="David" Margin="10" FontSize="50"/>
        </Grid>
        <Grid  Grid.Row="1" >
            <TabControl HorizontalAlignment="Center"  VerticalAlignment="Center" TabStripPlacement="Top"  BorderBrush="Black" Margin="10,10,10,10" Height="396" Width="662">

                <TabItem Header="בוחן" Style="{StaticResource MyTabItem}" BorderBrush="Black" VerticalAlignment="Top">
                    <Grid x:Name="Grid0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="20*" x:Name="Grid00"/>
                            <RowDefinition Height="20*" x:Name="Grid01"/>
                            <RowDefinition Height="20*" x:Name="Grid02"/>
                            <RowDefinition Height="20*" x:Name="Grid03"/>
                            <RowDefinition Height="20*" x:Name="Grid04"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Background="#FFDAD8D8" TextAlignment="Right" Text=":תעודת זהות" HorizontalAlignment="Right" Width="{Binding ActualWidth,ElementName=Grid0}" Height="{Binding ActualHeight,ElementName=Grid00}"/>
                        <TextBox Grid.Row="1" Width="{Binding ActualWidth,ElementName=Grid0}" Height="{Binding ActualHeight,ElementName=Grid01}"/>
                        <TextBlock  Grid.Row="2" Background="#FFDAD8D8" Text=":סיסמה" TextAlignment="Right" HorizontalAlignment="Right" Width="{Binding ActualWidth,ElementName=Grid0}" Height="{Binding ActualHeight,ElementName=Grid02}"/>
                        <PasswordBox Grid.Row="3" Width="{Binding ActualWidth,ElementName=Grid0}" Height="{Binding ActualHeight,ElementName=Grid03}"/>
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80*" x:Name="Grid040"/>
                                <ColumnDefinition Width="20*" x:Name="Grid041"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="בוחן חדש? - לחץ כאן" Height="{Binding ActualHeight,ElementName=Grid04}" Click="Button_Click"/>
                            <Button Content="התחבר" Grid.Column="1" Height="{Binding ActualHeight,ElementName=Grid04}" Width="{Binding ActualWidth , ElementName=Grid041}" Visibility="Visible" />
                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem Header="נבחן"  Style="{StaticResource MyTabItem}"  VerticalAlignment="Top" >
                    <Grid x:Name="Grid1">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="20*" x:Name="Grid10"/>
                            <RowDefinition Height="20*" x:Name="Grid11"/>
                            <RowDefinition Height="20*" x:Name="Grid12"/>
                            <RowDefinition Height="20*" x:Name="Grid13"/>
                            <RowDefinition Height="20*" x:Name="Grid14"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Background="#FFDAD8D8" TextAlignment="Right" Text=":תעודת זהות" HorizontalAlignment="Right" Width="{Binding ActualWidth,ElementName=Grid0}" Height="{Binding ActualHeight,ElementName=Grid00}"/>
                        <TextBox Grid.Row="1" Width="{Binding ActualWidth,ElementName=Grid0}" Height="{Binding ActualHeight,ElementName=Grid01}"/>
                        <TextBlock  Grid.Row="2" Background="#FFDAD8D8" Text=":סיסמה" TextAlignment="Right" HorizontalAlignment="Right" Width="{Binding ActualWidth,ElementName=Grid0}" Height="{Binding ActualHeight,ElementName=Grid02}"/>
                        <PasswordBox Grid.Row="3" Width="{Binding ActualWidth,ElementName=Grid0}" Height="{Binding ActualHeight,ElementName=Grid03}"/>
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80*" x:Name="Grid140"/>
                                <ColumnDefinition Width="20*" x:Name="Grid141"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="נבחן חדש? - לחץ כאן" Height="{Binding ActualHeight,ElementName=Grid04}" Click="Button_Click"/>
                            <Button Content="התחבר" Grid.Column="1" Height="{Binding ActualHeight,ElementName=Grid04}" Width="{Binding ActualWidth , ElementName=Grid041}" />
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

    </Grid>

</Window>
