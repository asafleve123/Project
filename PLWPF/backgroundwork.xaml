<Window x:Class="PLWPF.backgroundwork"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="backgroundwork" Height="150" Width="500" ResizeMode="NoResize">
    <Grid >
        <Label Content="0%" HorizontalAlignment="Center" VerticalAlignment="Center"  Name="label"/>
        <Label Content=" " HorizontalAlignment="Stretch" VerticalAlignment="Bottom"  Name="Name" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="169,0,172,9"/>
        <ProgressBar HorizontalAlignment="Stretch" VerticalAlignment="Top" Name="PBar" Height="23"/>

    </Grid>
</Window>
